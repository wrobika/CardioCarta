@model IEnumerable<CardioCarta.Models.Disease>

@{
    ViewBag.Title = "Schorzenia";
}

<h2>Schorzenia</h2>

@if (User.IsInRole("Patient"))
{
    <p>
        Jeśli na liście nie ma wszystkich Twoich schorzeń @Html.ActionLink("uzupełnij listę.", "AddDisease")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

@foreach (var item in Model)
{
    if (User.IsInRole("Patient"))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("X", "DeleteDisease", new { name = item.Name })
        </td>
    </tr>
    }
    else
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }
}

</table>
