@model IEnumerable<CardioCarta.Models.Diary>

@{
    ViewBag.Title = "Wypełnione dzienniczki";
}

<h2>Wypełnione dzienniczki</h2>

@if (User.IsInRole("Patient"))
{
    <p>
        @Html.ActionLink("Wypełń dzienniczek", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TimeStamp)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id })
            @if (User.IsInRole("Patient"))
            {
                @Html.ActionLink("Usuń wpis", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
